{
    "name": "StageNet", 
    "model": {
        "type": "StageNet",
        "module_name": "model",
        "args": { 
            "input_dim": 1,
            "hidden_dim": 384,
            "output_dim": 1,
            "conv_size": 10,
            "chunk_level": 3,
            "dropconnect_rate": 0.5,
            "dropout_rate": 0.5,
            "dropres_rate": 0.3
        }
    },
    "train_data_loader": {
        "type": "DataLoader",
        "args": {
            "dataset_dir": "./data/train",
            "batch_size": 256,
            "file_list": "demo-list.csv",
            "shuffle": true
        }
    },
    "val_data_loader": {
        "type": "DataLoader",
        "args": {
            "dataset_dir": "./data/train",
            "batch_size": 256,
            "file_list": "demo-val-list.csv",
            "shuffle": true
        }
    },
    "optimizer": {
        "type": "Adam",
        "args": {
            "lr": 0.001,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": "bce_loss",
    "metrics": [
        "accuracy",
        "precision0",
        "precision1",
        "recall0",
        "recall1",
        "auroc",
        "auprc",
        "minpse"
     ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 10,
            "gamma": 0.1
        }
    },
    "trainer": {
        "type": "ClassificationTrainer",
        "module_name": "classification_trainer",
        "epochs": 50,
        "save_dir": "saved/",
        "save_period": 10,
        "verbosity": 2000,
        "log_step": 1000,
        "class_weight_0": 1.0,
        "class_weight_1": 1.0,
        "monitor": "max train_auroc",
        "tensorboardX": false,
        "log_dir": "saved/runs"
    }
}