{
    "name": "stagenet", 
    "model": {
        "type": "StageNet",
        "module_name": "model.model",
        "args": { 
            "input_dim": 1,
            "hidden_dim": 384,
            "output_dim": 1,
            "conv_size": 10,
            "level": 3,
            "dropconnect_rate": 0.5,
            "dropout_rate": 0.5,
            "dropres_rate": 0.3
        }
    },
    "train_data_loader": {
        "type": "DataLoader",
        "module_name": "utils.utils",
        "args": {
            "dataset_dir": "./data/train",
            "batch_size": 256,
            "file_list": "demo-list.csv",
            "shuffle": true
        }
    },
    "val_data_loader": {
        "type": "DataLoader",
        "module_name": "utils.utils",
        "args": {
            "dataset_dir": "./data/train",
            "batch_size": 256,
            "file_list": "demo-val-list.csv",
            "shuffle": false
        }
    },
    "optimizer": {
        "type": "Adam",
        "args": {
            "lr": 0.001,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 10,
            "gamma": 0.1
        }
    },
    "trainer": {
        "type": "Trainer",
        "module_name": "trainer",
        "epochs": 20,
        "save_dir": "saved_weights/",
        "save_period": 5,
        "verbosity": 2000,
        "log_step": 1000,
        "class_weight_0": 1.0,
        "class_weight_1": 1.0,
        "monitor": "max train_auroc",
        "tensorboardX": false,
        "log_dir": "saved/runs"
    }
}